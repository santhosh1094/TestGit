@(Html.Kendo().Grid<ModelName>()
    // other grid configurations
    .Name("gridName")
    .Columns(columns =>
    {
        // other columns

        columns.Bound(m => m.FilePath).Title("File").Width(150)
            .ClientTemplate(
                "# if (FilePath) { #" +
                "   <i class='fa fa-file download-icon' onclick='downloadFile(#= FilePath #)'></i> #= FileName #" +
                "# } else { #" +
                "   No File" +
                "# }"
            );
        
        // other columns
    })
)
