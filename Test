@(Html.Kendo().Grid<ModelName>()
    // other grid configurations
    .Name("gridName")
    .Columns(columns =>
    {
        // other columns

        columns.Bound(m => m.FilePath).Title("File").Width(150)
            .ClientTemplate("#= (FilePath && FilePath.trim() !== '') ? '<i class=\"fa fa-file download-icon\" onclick=\"downloadFile(' + FilePath + ')\"></i> ' + FileName : 'No File' #");
        
        // other columns
    })
)
@(Html.Kendo().Grid<ModelName>()
    .Name("gridName")
    .Columns(columns =>
    {
        // other columns

        columns.Bound(m => m.Status).Title("Status").Width(150)
            .ClientTemplate("# if (Status === 'Active') { #" +
                            "   <span class='active-status'>Active</span>" +
                            "# } else { #" +
                            "   <span class='inactive-status'>Inactive</span>" +
                            "# } #");

        // other columns
    })
)
